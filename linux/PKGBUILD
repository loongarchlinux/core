pkgbase=linux
_ver=6.7.0
_rdate=20240125
pkgver=${_ver}.arch1
pkgrel=7
pkgdesc='Linux'
url='https://github.com/archlinux/linux'
arch=(loong64 x86_64)
license=(GPL2)
makedepends=(
  bc
  cpio
  gettext
  libelf
  pahole
  perl
  python
  tar
  xz

  # htmldocs
  graphviz
  imagemagick
  python-sphinx
  python-yaml
  texlive-latexextra
)
options=('!strip')
_srcname=${pkgbase}-${_ver}
source=(https://github.com/loongarchlinux/linux/releases/download/v${_rdate}/linux-${_ver}-${_rdate}.tar.xz
        config         # the main kernel config file
        config.la64
        pixart.patch
)
validpgpkeys=(
